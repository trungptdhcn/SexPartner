<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:minWidth="170dp"
                android:background="@drawable/border_qa_button_white"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="From Laura"
                    android:layout_marginLeft="@dimen/_70dp"/>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="180dp"
                android:background="@drawable/border_qa_button_red"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/_30dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_35dp"
                    android:text="afdsffffffffffffffffffz
                    "/>
        </LinearLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/bundle_chat_me_item_ivAvatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/test"
                android:layout_marginTop="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"
                android:layout_marginLeft="@dimen/_3dp"/>
    </RelativeLayout>
</LinearLayout>