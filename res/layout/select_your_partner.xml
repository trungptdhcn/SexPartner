<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.mikhaellopez.circularimageviewsample"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
        >
    <RelativeLayout
            android:id="@+id/select_your_partner_rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <ImageView
                android:id="@+id/select_your_partner_ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15dp"
                android:background="@drawable/bt_back2"/>
        <TextView
                android:id="@+id/select_your_partner_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/title_style_text"
                android:textSize="@dimen/_18dp"
                android:textStyle="bold"
                android:text="@string/select_your_partner"
                android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_80dp"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_60dp"
                android:background="@color/Black"
                android:alpha="0.8"
                android:layout_centerInParent="true">
        </RelativeLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/select_your_partner_ivAvatar"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/test"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10dp"
               />
        <TextView
                android:id="@+id/select_your_partner_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="JOHN DOE"
                android:layout_toLeftOf="@+id/select_your_partner_ivAvatar"
                style="@style/title_style_text"
                android:textSize="@dimen/_18dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:layout_marginRight="@dimen/_10dp"/>
    </RelativeLayout>
    <ListView
            android:id="@+id/select_your_partner_lvYourPartner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/_20dp"
            android:divider="@android:color/transparent"
            >
    </ListView>

</LinearLayout>